{
  "name": "recorder",
  "displayName": "recorder",
  "description": "Record programmer operations and generate SOP.",
  "version": "0.0.2",
  "publisher": "TokenRollAI",
  "license": "CC-BY-NC-4.0",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/TokenRollAI/recorder.git"
  },
  "bugs": {
    "url": "https://github.com/TokenRollAI/recorder/issues"
  },
  "homepage": "https://github.com/TokenRollAI/recorder",
  "keywords": [
    "recorder",
    "sop",
    "programming",
    "developer",
    "code"
  ],
  "icon": "icons/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "enabledApiProposals": [
    "terminalDataWriteEvent",
    "terminalShellIntegration"
  ],
  "contributes": {
    "commands": [
      {
        "command": "recorder.toggleRecording",
        "title": "Start/Stop"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "recorder.toggleRecording",
          "when": "false"
        }
      ],
      "statusBar": [
        {
          "command": "recorder.toggleRecording",
          "group": "navigation",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "update-proposed-api": "vscode-dts dev"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "vscode-dts": "^0.3.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "ignore": "^7.0.5"
  }
}
